<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="presentation.MainActivity"
             android:id="@+id/frag_diary" android:background="@color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023년 3월"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/mindset_main_black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp" android:layout_marginStart="24dp"/>


        <ImageView
                android:layout_width="0dp"
                android:layout_height="29dp" app:srcCompat="@drawable/calendar_title"
                android:id="@+id/week_calendar_title" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginTop="16dp"
                android:scaleType="fitCenter" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
        <com.kizitonwose.calendar.view.WeekCalendarView
                android:id="@+id/weekCalendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cv_dayViewResource="@layout/calendar_day"
                app:layout_constraintTop_toBottomOf="@+id/week_calendar_title"
                app:layout_constraintStart_toStartOf="@+id/week_calendar_title"
                app:layout_constraintEnd_toEndOf="@+id/week_calendar_title" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
        </com.kizitonwose.calendar.view.WeekCalendarView>
        <TextView
                android:id="@+id/textView5"
                android:layout_width="335dp"
                android:layout_height="304dp"
                android:background="@color/mindset_disabled_fill"
                android:text="김안젤라님, 오늘 작성된 일기가 없어요!\n일기를 작성해볼까요?"
                android:textColor="#616161"
                android:textSize="14sp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weekCalendarView" android:layout_marginTop="32dp"/>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/extendedFAB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/today_diary_write"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.94"
                app:layout_constraintVertical_bias="0.976" android:theme="@style/ExtendedFAB"
                app:backgroundTint="@color/mindset_main_green" android:textColor="@color/mindset_main_background"
                app:icon="@drawable/button_plus" app:iconTint="@color/mindset_main_background"
                android:textSize="16sp" android:fontFamily="@font/pretendard_medium" app:iconGravity="end"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>